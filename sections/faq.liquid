<div class="page">
    <div class="page-container">
        <header>
            <h1 class="section-title">{{ page.title }}</h1>
        </header>
        <div class="page-content">

          <div class="accordion">
            {% for block in section.blocks %}
              <div class="accordion-container">
                <h3 class="accordion-title">{{ block.settings.title }}<span></span></h3>
                <div class="accordion-content">
                  {{ block.settings.content }}
                </div>
              </div>          
            {% endfor %}
          </div>
        </div>
    </div>
</div> 

    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "FAQPage",
      "mainEntity": [
      
      {% for block in section.blocks %}
      {
        "@type": "Question",
        "name": "{{ block.settings.title }}",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "{{ block.settings.content }}"
        }
      }{% unless forloop.last %},{% endunless %}
      {% endfor %}
      ]
    }
    </script>



<style>
  .page-container h3 {
  	margin-bottom: 0;
  }
.accordion-title  {
    color: var(--text-accent);
    font-weight: bold;
      font-family: 'futura';
}
.accordion-title {
    cursor: pointer;
    padding: .5rem 0;
    position: relative;
}
.accordion-title span {
    display: block;
    position: absolute;
    height: 14px;
    width: 14px;
    right: 20px;
    top: 18px;
}
.accordion-title span:after {
    content: '';
    width: 14px;
    height: 3px;
    border-radius: 2px;
    background-color: var(--text-accent);
    position: absolute;
}
.accordion-title span:before {
    content: '';
    width: 14px;
    height: 3px;
    border-radius: 2px;
    background-color: var(--text-accent);
    position: absolute;
    transform: rotate(90deg);
    transition: all 0.3s ease-in-out;
}
.accordion-container {
    border-bottom: 1px solid var(--text-accent);
      margin-bottom: 2rem;
}
.accordion .accordion-container .accordion-content {
    width: 100%;
    color: var(--main-color);
    -webkit-transition: all 0.3s ease-in-out;
    transition: all 0.3s ease-in-out;
    opacity: 0;
    height: auto;
    max-height: 0;
    overflow: hidden;
    padding: 0px 10px;
  font-family: 'futura';
}
.accordion-container.acc-active .accordion-title span::before {
    transform: rotate(0deg);
}
.accordion-container.acc-active .accordion-content {
    padding: 15px 10px 10px 10px;
    opacity: 1;
    height: auto;
    max-height: 3000px;
}

</style>

{% schema %}
  {
    "name": "FAQS",
    "settings": [],
	"blocks":[
		{
			"name":"FAQ",
			"type":"info",
			"settings":[
			
			{
				"type":"text",
				"id":"title",
				"label":"Title",
				"default":"Lorem ipsum ad aeternum"
			},
			{
				"type":"textarea",
				"id":"content",
				"label":"Content",
				"default":"Lorem ipsum, dolor sit amet consectetur adipisicing elit. Incidunt eos repellendus nihil, ipsam expedita esse ex quos velit, excepturi perspiciatis voluptas, deleniti sunt explicabo vitae tempore doloribus quia exercitationem a?"
			}

			]
		}
	]
  }
{% endschema %}
