            </div>
            <div class="stamp">
                <img src="{{  settings.img_confianza_8 | img_url}}" alt="{{ settings.alt_confianza_6  }}">
                <p class="stamp-text">{{ section.settings.stamp_text_8 }}</p>
            </div>
        </div>
    </div>
</section>

 
