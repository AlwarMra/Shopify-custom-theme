<section class="container container-width trust-section">
  
    <div class="container-fluid">

        <h3 class="section-title">{{ section.settings.titulo }}</h3>
        <p class="trust-text">
         <!-- TODO: adaptar el css porque el campo ya lleva un <p> obligatoriamente -->
            {{ section.settings.texto }}
        </p> 
        <div class="trust-stamps">
            <div class="stamp">
                <img src="{{  settings.img_confianza_1 | img_url}}" alt="{{ settings.alt_confianza_1  }}">
                <p class="stamp-text">{{ section.settings.stamp_text_1 }}</p>
            </div>
            <div class="stamp">
                <img src="{{  settings.img_confianza_2 | img_url}}" alt="{{ settings.alt_confianza_2  }}">
                <p class="stamp-text">{{ section.settings.stamp_text_2 }}</p>
            </div>
            <div class="stamp">
                <img src="{{  settings.img_confianza_3 | img_url}}" alt="{{ settings.alt_confianza_3  }}">
                <p class="stamp-text">{{ section.settings.stamp_text_3 }}</p>
            </div>
            <div class="stamp-break"></div>
            <div class="stamp">
                <img src="{{  settings.img_confianza_4 | img_url}}" alt="{{ settings.alt_confianza_4  }}">
                <p class="stamp-text">{{ section.settings.stamp_text_4 }}</p>
            </div>
            <div class="stamp">
                <img src="{{  settings.img_confianza_5 | img_url}}" alt="{{ settings.alt_confianza_5  }}">
                <p class="stamp-text">{{ section.settings.stamp_text_5 }}</p>
            </div>
            <div class="stamp">
                <img src="{{  settings.img_confianza_6 | img_url}}" alt="{{ settings.alt_confianza_6  }}">
