<style> 
  .home-top-back-container {
  	display: grid;
    grid-gap: 0;
    overflow: hidden;
  }
  
  .home-top-card-new {
    margin: 0 auto;
    text-align: center;
  }
  .home-top-card-new .home-top-image{
  position: relative;
    height: 8rem;
    width: 100%;
  }
     .home-top-block-1 {
    background-image: url('{{ section.settings.sq_img_1 | image_url }}');
    }
    .home-top-block-2 {
    background-image: url('{{ section.settings.sq_img_2 | image_url }}');
    }
    .home-top-block-3 {
    background-image: url('{{ section.settings.sq_img_3 | image_url }}');
    }
    .home-top-block-4 {
    background-image: url('{{ section.settings.sq_img_4 | image_url }}');
    }

    .home-top-blocks {
    	display: grid;
      	grid-template-columns: 1fr 1fr;
      height: 100%;
    }
  
  
  .home-top-block {
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;  
    display: inline-block;
   	width: 50vw;
    height: 40vw;
    position: relative;
    border: {{ section.settings.grid_block_border_radius }}px solid {{ section.settings.grid_block_border_color }};
  }
  .home-top-block a{
  	position: absolute;
    font-family: 'Futura-Medium';
    width: 100%;
    height: 100%;
    color: black;
    text-decoration: none;
    font-size: 1.3rem;
  }
  .home-top-block p{
  	position: absolute;
    bottom: 1rem;
    left: 1rem;
  }
  .home-top-block-text p,
  .home-top-block-text a,
  .home-top-block-text span,
  .home-top-block-text .read-more {
    color: {{ section.settings.grid_block_text_color }};
  }
  .home-top-block .read-more {
  	display: none;
  }
  

  .home-top-card-new .border_image {
  	position: relative;
    display: block;
    z-index:3;
    display: block;
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    height: 4rem;
    width: 100%;
    background: {{ section.settings.color_back_col_4 }};
    border-radius: {{ section.settings.border_radius }}px;
        
    {% if section.settings.border_check_4 %}
    border:.18rem solid {{ section.settings.border_color_4 }};
    {% endif %}
    {% if section.settings.shadow_check_4 %}
    box-shadow: 2px 2px 10px 0 {{ section.settings.shadow_color_4 }};
    {% endif %}
  }
  .home-top-card-new .card-title {
  font-family: futura;
    font-size: 26px;
    padding-bottom: 1rem;
    text-align: center;
    position: absolute;
    top: 15%;
    z-index: 4;
    width: 100%;
    display: block;
  }
  .home-top-card-new .home-collection-link {
  	display: none;
  }
    .h-t-b-o { 
        background-image: url('{{ section.settings.img_fondo_video | image_url }}');  
    }
      @media(max-width:768px) {

      .h-t-b-o{ 
        background-image: url('{{ section.settings.img_fondo_movil | image_url }}');  
          }
      }
  
  .home-top-background .home-top-cards .home-top-card .home-top-image .border_image {
    {% if section.settings.border_check %}
    border:.18rem solid {{ section.settings.border_color }};
    {% endif %}
    {% if section.settings.shadow_check %}
    box-shadow: 2px 2px 10px 0 {{ section.settings.shadow_color }};
    {% endif %}
    border-radius: {{ section.settings.border_radius }}px;
    background-color: {{ section.settings.btn_back_color }};
  }
  
  @media(min-width: 768px) {

    .home-top-card-new {
    display: none;
    }
      .home-top-card-new .home-top-image{
      	bottom: 2rem;
      }
    
  
    
  }
  
  @media(max-width: 768px) {
    .home-top-card-new .home-top-image{ 
    height: 5rem !important;
    }
    .home-top-card-new .border_image {
              height: 3.3rem !important;
    }
    
    .home-top-card-new .card-title {
    font-size: 18px !important;
      top: 23% !important;
    }
  }

  @media(min-width: 900px) {
      
    
        .home-top-background .subheading,
    .home-top-background .section-title{
    	white-space: normal;
      line-height: 1.5;
    }
    
      .home-top-block {
    	width: 25vw;
        height: 100%;
  }
    .home-top-back-container {
  	grid-template-columns: 1fr 1fr;
  }
    
   .home-top-back-container .grid-item {
   	-width: 50vw;
   }
    .home-top-block a{
    font-size: 1.6rem;
      font-family:'futura-bold';
    }
   .home-top-block .read-more {
  		display: inline-block;
     font-size: 
  	}
  
     .home-top-background .home-top-cards {
     	justify-content: space-evenly;
     }
    
    .home-top-background .home-top-cards .home-top-card .home-top-image .border_image {
    	width: 7rem;
    }
    .home-top-background .home-top-cards .home-top-card .home-top-image {
    	width: 7rem;
      height: 7rem;
    }
     
        
  }
