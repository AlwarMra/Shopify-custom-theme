{% layout none %}
<!DOCTYPE html>
<html>

<head>
  <title>Please Log In</title>
  <style type="text/css">
    * {
      margin: 0;
      padding: 0;
    }

    img {
      border: 0;
    }

    body {
      margin: 0;
      background-color: #e0e0e0;
      font-family: 'futura', sans-serif;
      color: var(--text-accent);
    }

    h1,
    h2,
    h3,
    h4,
    h5,
    h6 {
      color: #000;
      margin: 5px 0 10px 0;
      font-weight: 400;
      font-family: 'futura', sans-serif;
      color: var(--text-accent);
    }

    h3,
    h4,
    h5,
    h6 {
      font-weight: 700;
    }

    p {
      color: var(--text-accent);
      margin-bottom: 13px;
      font-size: 14px;
    }

    ul,
    ol {
      margin-bottom: 13px;
      margin-left: 15px;
    }

    ol {
      margin-left: 25px;
    }

    input,
    select,
    textarea {
      background-color: transparent;
      border: 1px solid var(--main-color);
      outline: none;
      color: var(--text-accent);
      padding: .5rem;
      font-family: "DIN Neuzeit Grotesk", sans-serif;
      width: 100%;
      font-size: .85rem;
      padding: .75rem .875rem;
      transition: all .2s ease;
      appearance: none;
    }

    input:focus,
    select:focus,
    textarea:focus {
      border: 1px solid var(--text-accent);
    }

    input.btn {
      font-weight: bold;
      cursor: pointer;
      background-color: var(--main-color);
      padding: 4px 6px;
      -moz-border-radius: 5px;
      -webkit-border-radius: 5px;
      border-radius: 5px;
      text-shadow: 0px 1px 1px #fff;
      color: #3a3a3a;
      width: 103%;
    }

    #container {
      margin: 0 auto;
      transform: translateY(50%);
      width: 90%;
    }

    #login {
      background: #fff;
      border: none;
      border: 2px solid var(--main-color);
      margin: 50px auto 0 auto;
      padding: 30px;
      -webkit-border-radius: 4px;
      -moz-border-radius: 4px;
      border-radius: 4px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      -moz-box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      -webkit-box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    #login h1 {
      margin: 0 0 18px 0;
      text-align: center;
      line-height: 30px;
    }

    #login .default-text {
      font-style: italic;
      margin-bottom: 1.5em;
      font-size: 17px;
      display: block;
      text-align: center;
      margin-top: 33px;
    }

    form#login_form {
      border-top: 1px solid #e0e0e0;
      padding-top: 25px;
      margin-top: 25px;
      font-size: 80%;
      margin-bottom: 70px;
    }

    form#login_form label {
      color: #777;
      margin-bottom: .5rem;
    }

    #login_form #password {
      font-size: 14px;
      padding: 4px 6px;
      outline: none;
      margin-bottom: 1rem;
    }

    #login_form label,
    #login_form input {
      float: left;
      margin-right: 3px;
    }

    #login_form input:focus {
      border: 1px solid var(--text-accent);
    }

    #footer {
      padding-top: 3rem;
      margin-bottom: 40px;
      font-size: 13px;
      color: #666;
      text-shadow: 0 1px rgba(255, 255, 255, 0.4);
      text-align: center;
    }

    #footer a {
      color: var(--main-color);
      transition: .3s ease;
    }

    #footer a:hover {
      color: var(--text-accent);
      transition: .3s ease;
    }

    #powered {
      color: #9c9c9c;
      display: block;
      margin-top: 15px;
    }

    #powered a {
      background-repeat: no-repeat;
      background-image: url(data:image/png;base64,);
      padding-left: 21px;
      color: #9c9c9c;
      text-decoration: none;
    }

    #powered a:hover {
      text-decoration: underline;
    }

    .errors {
      background: #feebeb;
      padding: 4px 5px;
      font-size: 15px;
      color: #7e1412;
      display: block;
      margin-bottom: 15px;
    }

    .errors ul {
      list-style: none;
      padding: 0;
      margin: 0;
    }

    .center {
      text-align: center;
      display: block;
      font-size: 17px;
    }

    .icons svg {
      height: 25px;
      width: 25px;
      margin: 1rem;
    }

    @media(min-width:768px) {
      #container {
        width: 500px;
      }
    }
  </style>
</head>
{%- capture background_image_url -%}
{%- if section.settings.background_image -%}
{{- section.settings.background_image | img_url: '1500x', format: 'pjpg' -}}
{%- else -%}
{{- 'password.jpg' | asset_img_url: '1500x', format: 'pjpg' -}}
{%- endif -%}
{%- endcapture -%}

<body style="background-image: url('{{ background_image_url }}')">
  <div id='container'>
    <div id='login'>
      <div>
        <h1>{{ shop.name }}</h1>
        {% if shop.password_message and shop.password_message != '' %}
        {{ shop.password_message }}
        {% else %}
        <p><span class="default-text">Will be opening soon...</span></p>
        {%- assign share_url = shop.url | append: product.url -%}
        {%- assign twitter_text = product.title -%}
        {%- assign pinterest_description = product.description | strip_html | truncatewords: 15 | url_param_escape -%}
        {%- assign pinterest_image = product.featured_image | img_url: 'large' | prepend: 'https:' -%}
        <div class="icons" style="display: flex; justify-content: center;">
          <a style="fill:  #3b5998;" href="https://www.facebook.com/sharer.php?u={{ share_url }}" target="_blank"
            rel="noopener">{%- include 'icon' with 'facebook' -%}</a>
          <a style="fill: #00acee;" href=""
            https://twitter.com/share?{% if twitter_text != blank %}text={{twitter_text}}&{% endif %}url={{ share_url }}"
            target="_blank" rel="noopener">{%- include 'icon' with 'twitter' -%}</a>
          <a style="fill: #c8232c;"
            href="https://pinterest.com/pin/create/button/?url={{ share_url }}{% if pinterest_image != blank %}&media={{ pinterest_image }}{% endif %}&description={{ pinterest_description }}"
            target="_blank" rel="noopener">{%- include 'icon' with 'pinterest' -%}</a>
        </div>
        {% endif %}
      </div>
      {% form 'storefront_password' %}
      {{ form.errors | default_errors }}
      <label for='password'>Enter store using password: </label>

      <input type='password' name='password' id='password' autofocus />
      <div class="actions">
        <input class="btn" name="commit" type="submit" value="Enter" />
      </div>
      {% endform %}

      <div id='footer'>
        <div id='owner'>Are you the store owner? <a href="/admin">Log in here</a> or <a
            href="/admin/online_store/preferences?tutorial=unlock">change your password settings</a></div>
        <div id='powered'>
          This store is powered by <a href="//www.shopify.com" target="_blank"
            title="Create your own online store with Shopify" rel="nofollow">Shopify</a>
        </div>
      </div>

    </div>
  </div>

  <script type="text/javascript">
    document.getElementById('password').focus();
  </script>

</body>

</html>